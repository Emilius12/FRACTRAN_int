#!/usr/bin/env python3


def generate_add_frac(x: int, y: int, filename: str = None):
    """
    Génère un fichier FRACTRAN qui additionne x et y en utilisant 3/2
    et le nombre initial 3**x * 2**y.
    """
    if filename is None:
        filename = f"add_{x}_{y}.frac"

    # Calcul du nombre initial
    n = (3 ** x) * (2 ** y)

    # Programme FRACTRAN très simple : ici juste la fraction 3/2
    program = ["3/2"]

    # Écriture du fichier
    with open(filename, "w") as f:
        f.write(",".join(program) + "\n")
        f.write(str(n) + "\n")

    print(f"Fichier FRACTRAN généré : {filename}")

if __name__ == "__main__":
    x = int(input("Entrez x : "))
    y = int(input("Entrez y : "))
    generate_add_frac(x, y)